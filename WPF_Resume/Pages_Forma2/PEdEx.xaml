<Page x:Class="WPF_Resume.Pages_Forma2.PEdEx"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Resume.Pages_Forma2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PEdEx">
    <Page.Resources>
        <Style x:Key="NoSpacingParagraph" TargetType="Paragraph">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="LineHeight" Value="1"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Label Content="Освіта:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <RichTextBox x:Name="richTextBoxEducation" Margin="10,46,10,221">
            <FlowDocument>
                <Paragraph Style="{StaticResource NoSpacingParagraph}">
                    <!--<Run Text="RichTextBox"/>-->
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="Досвід роботи:" HorizontalAlignment="Left" Margin="10,234,0,0" VerticalAlignment="Top" FontSize="16"/>
        <RichTextBox x:Name="richTextBoxExperience" Margin="10,265,10,10">
            <FlowDocument>
                <Paragraph Style="{StaticResource NoSpacingParagraph}">
                    <!--<Run Text="RichTextBox"/>-->
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Page>
