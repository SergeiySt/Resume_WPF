<Window x:Class="WPF_Resume.WChoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Resume"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Варіант оформлення резюме" Height="350" Width="531" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Виберіть варіант оформлення резюме" HorizontalAlignment="Left" Margin="61,32,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <RadioButton x:Name="radioButtonSimply" Content="Спрощений варіант" HorizontalAlignment="Left" Margin="81,84,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="20"/>
        <RadioButton x:Name="radioButtonComplex" Content="Для роботодавця" HorizontalAlignment="Left" Margin="81,115,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="20"/>
        <RadioButton x:Name="radioButtonStandart" Content="Для прикладу" HorizontalAlignment="Left" Margin="81,146,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="20"/>
        <Button x:Name="buttonStart" Content="Почати" HorizontalAlignment="Center" Margin="0,231,0,0" VerticalAlignment="Top" FontSize="24" Height="50" Width="128"/>
    </Grid>
</Window>
